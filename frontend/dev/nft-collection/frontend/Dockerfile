FROM node:18-alpine

WORKDIR /usr/src

COPY . /usr/src

RUN apk update

RUN apk add xsel


ARG REACT_APP_FACTORY_ADDRESS \
    REACT_APP_AUTH_API_ADDRESS \
    REACT_APP_TESTNET_URL \ 
    REACT_APP_COLLECTION_ADDRESS \ 
    REACT_APP_IPFS_ADDRESS \
    REACT_APP_IPFS_GATEWAY_ADDRESS \
    REACT_APP_DEFAULT_NODES_URL \
    REACT_APP_NODE
ENV REACT_APP_FACTORY_ADDRESS=${REACT_APP_FACTORY_ADDRESS} \
    REACT_APP_AUTH_API_ADDRESS=${REACT_APP_AUTH_API_ADDRESS} \
    REACT_APP_TESTNET_URL=${REACT_APP_TESTNET_URL} \
    REACT_APP_COLLECTION_ADDRESS=${REACT_APP_COLLECTION_ADDRESS} \
    REACT_APP_IPFS_ADDRESS=${REACT_APP_IPFS_ADDRESS} \
    REACT_APP_IPFS_GATEWAY_ADDRESS=${REACT_APP_IPFS_GATEWAY_ADDRESS} \
    REACT_APP_DEFAULT_NODES_URL=${REACT_APP_DEFAULT_NODES_URL} \
    REACT_APP_NODE=${REACT_APP_NODE} \
    DISABLE_ESLINT_PLUGIN=true 
    
RUN npm install

RUN npm run build

RUN npm install --global serve

CMD ["serve", "-s", "/usr/src/build"]

FROM node:20-alpine

ARG VITE_SIGNALING_SERVER \
    VITE_NODE_ADDRESS \
    VITE_DNS_API_URL \
    VITE_DNS_NAME \
    WS_ADDRESS \
    PROGRAM_ID
ENV VITE_SIGNALING_SERVER=${VITE_SIGNALING_SERVER} \
    VITE_NODE_ADDRESS=${VITE_NODE_ADDRESS} \
    VITE_DNS_API_URL=${VITE_DNS_API_URL} \
    VITE_DNS_NAME=${VITE_DNS_NAME} \
    WS_ADDRESS=${WS_ADDRESS} \
    PROGRAM_ID=${PROGRAM_ID}

WORKDIR /apps
COPY ./backend/w3bstreaming /apps

RUN yarn install
RUN yarn build

CMD ["yarn", "start"]
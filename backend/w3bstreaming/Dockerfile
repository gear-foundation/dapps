FROM node:20-alpine

ARG REACT_APP_SIGNALING_SERVER \
    REACT_APP_NODE_ADDRESS \
    REACT_APP_DNS_API_URL \
    REACT_APP_DNS_NAME \
    WS_ADDRESS \
    PROGRAM_ID
ENV REACT_APP_SIGNALING_SERVER=${REACT_APP_SIGNALING_SERVER} \
    REACT_APP_NODE_ADDRESS=${REACT_APP_NODE_ADDRESS} \
    REACT_APP_DNS_API_URL=${REACT_APP_DNS_API_URL} \
    REACT_APP_DNS_NAME=${REACT_APP_DNS_NAME} \
    WS_ADDRESS=${WS_ADDRESS} \
    PROGRAM_ID=${PROGRAM_ID}

WORKDIR /apps
COPY ./backend/w3bstreaming /apps

RUN yarn install
RUN yarn build

CMD ["yarn", "start"]